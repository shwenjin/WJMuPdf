<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/frame_content"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
    <RelativeLayout
        android:layout_gravity="bottom"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/txt_page"
            android:layout_width="wrap_content"
            android:textColor="#cccccc"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_height="match_parent"
            android:text="0/0"/>
        <ImageView
            android:id="@+id/image_entire_screen"
            android:layout_alignParentRight="true"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/ecache_video_seekbar_bg"
            android:layout_marginRight="5dp"
            android:scaleType="center"
            android:adjustViewBounds="true"
            android:src="@drawable/entire_screen_launches"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_progress"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_size"
            android:gravity="right|center_vertical"
            android:text="0/0M"
            android:layout_marginTop="3dp"
            android:textSize="13sp"
            android:textColor="#ccc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.artifex.mupdfdemo.SpringProgressView
            android:id="@+id/spring_progress"
            android:layout_width="200dp"
            android:layout_height="10dp" />
    </LinearLayout>
</FrameLayout>